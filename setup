#   Inc., 51 Franklin Street, Fifth Floor, Boston, MA 02110-1301  USA.


if [ "$EUID" -ne 0 ]
  then echo "The script must be run as root."
  exit
fi

DIR=$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )
cd $DIR
chmod a+x ./remove ./prerm ./postinst

#
# These files shouldn't be shiped with the package,
# they are removed in case they've been forgotten
# in the source code.
#
if [ -d $DIR/usr/share/alienware-kbl/__pycache__ ]; then
	rm -rf $DIR/usr/share/alienware-kbl/__pycache__
fi

#
# Remove previous versions
#
echo -e "\e[00;32mTo ensure a clean installation any previous version will be fully removed..\e[00m"
./remove -s

#
# Start the installation
#
echo -e "\e[00;32mCopying the software files (the message 'ommiting directory' is normal)...\e[00m"
install -d /usr/bin
install -D $DIR/usr/bin/* /usr/bin

install -d /usr/lib/systemd/system
install -D $DIR/usr/lib/systemd/system/* /usr/lib/systemd/system

install -d /usr/share/AlienwareKBL
install -D $DIR/usr/share/AlienwareKBL/* /usr/share/AlienwareKBL

	install -d /usr/share/AlienwareKBL/Configuration
	install -D $DIR/usr/share/AlienwareKBL/Configuration/* /usr/share/Configuration

	install -d /usr/share/AlienwareKBL/Engine
	install -D $DIR/usr/share/AlienwareKBL/Engine/* /usr/share/Engine

	install -d /usr/share/AlienwareKBL/GUI
	install -D $DIR/usr/share/AlienwareKBL/GUI/* /usr/share/GUI

		install -d /usr/share/AlienwareKBL/GUI/images
		install -D $DIR/usr/share/AlienwareKBL/GUI/images/* /usr/share/GUI/images

		install -d /usr/share/AlienwareKBL/GUI/ZoneWidget
		install -D $DIR/usr/share/AlienwareKBL/GUI/ZoneWidget/* /usr/share/GUI/ZoneWidget

	install -d /usr/share/AlienwareKBL/Indicator
	install -D $DIR/usr/share/AlienwareKBL/Indicator/* /usr/share/Indicator

		install -d /usr/share/AlienwareKBL/Indicator/images
		install -D $DIR/usr/share/AlienwareKBL/Indicator/images/* /usr/share/Indicator/images

install -d /usr/share/applications
install -D $DIR/usr/share/applications/* /usr/share/applications

install -d /usr/share/doc/alienware-kbl
install -D $DIR/usr/share/doc/alienware-kbl/* /usr/share/doc/alienware-kbl

	install -d "/usr/share/doc/alienware-kbl/Images Preview"
	install -D "$DIR/usr/share/doc/alienware-kbl/Images Preview/*" "/usr/share/doc/alienware-kbl/Images Preview"

	install -d /usr/share/doc/alienware-kbl/Licenses
	install -D $DIR/usr/share/doc/alienware-kbl/Licenses/* /usr/share/doc/alienware-kbl/Licenses

	install -d /usr/share/doc/alienware-kbl/Programming
	install -D $DIR/usr/share/doc/alienware-kbl/Programming/* /usr/share/doc/alienware-kbl/Programming

#
# Executing the post-installation script
#
echo -e "\e[00;32mExecuting the post-installation...\e[00m"
./postinst

echo -e "\e[00;32mAlienware-KBL is installed, enjoy it !\e[00m"

